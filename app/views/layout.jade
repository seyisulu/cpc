doctype html
html(ng-app='cpc')
  head
    include head
    style(type='text/css').
      body {
        background-color: #231919;
      }
      body > .grid {
        height: 100%;
      }
      .image {
        margin-top: 0;
      }
      .column {
        max-width: 450px;
      }
    
  body(ng-controller='motherCtrl as mtc')
    block content 
        
    include foot
    script.
      $(document).ready(function() {        
        $('#searchform').form({
          fields: {
            city: {
              identifier: 'city',
              rules: [{
                type: 'empty',
                prompt: 'Please enter a valid value for {name}'
              }]
            }
          }
        });        
      });
